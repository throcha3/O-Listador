<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_margin="4dp">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#d7d1a1"
        android:padding="4dp">
        <TextView
            android:id="@+id/txtNoteHeader"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/imgClose"
            android:text="31/01/1996"
            />
        <ImageView
            android:id="@+id/imgClose"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_add_circle"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/txtNoteHeader"/>
        <TextView
            android:id="@+id/txtNoteDesc"
            android:layout_width="0dp"
            android:textSize="@dimen/mainTextSize"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/txtNoteHeader"
            android:text="Texto enorme mesmo aquele grandao so de teste vamos ver no que vai dar isso"
            />
    </android.support.constraint.ConstraintLayout>


</android.support.v7.widget.CardView>